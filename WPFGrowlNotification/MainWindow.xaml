<Window x:Class="WPFGrowlNotification.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notificator Demo" Height="200" Width="300">
    <StackPanel>
        <Button Width="200" Height="30" Margin="4" Click="ButtonClick1">Simple notification</Button>
        <Button Width="200" Height="30" Margin="4" Click="ButtonClick2">Title notification</Button>
        <Button Width="200" Height="30" Margin="4" Click="ButtonClick3">Image notification</Button>
        <Button Width="200" Height="30" Margin="4" Click="ButtonClick4">Full notification</Button>
    </StackPanel>
</Window>
